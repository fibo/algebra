{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "module": "esnext",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "removeComments": true,
    "rootDir": "./src",
    "strict": true,
    "target": "esnext",
    "tsBuildInfoFile": "tsconfig.tsbuildinfo"
  },
  "include": ["./src/**/*.ts"]
}
