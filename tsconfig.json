{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "target": "esnext",

    // To build stripped JS, but emit declarations with JSDoc preserved:
    // disable comments and declaration, then in package.json add script
    //
    //     "build": "tsc --removeComments && tsc --declaration --emitDeclarationOnly",
    //
    "removeComments": false,
    "declaration": false
  },
  "exclude": ["node_modules", "**/*_test.ts"],
  "include": ["./src/**/*.ts"]
}
